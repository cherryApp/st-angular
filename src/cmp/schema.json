{
    "$schema": "http://json-schema.org/schema",
    "$id": "StAngularSchematics",
    "title": "StAngular Options Schema",
    "description": "Genarates a standalone Angular component",
    "properties": {
        "name": {
            "type": "string",
            "description": "The name of the new component",
            "$default": {
                "$source": "argv",
                "index": 0
            },
            "x-prompt": "Component name:"
        },
        "project": {
            "type": "string",
            "description": "Project name"
        }
    },
    "required": [
        "name"
    ]
}
